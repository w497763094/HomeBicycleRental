<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wudebin.bicyclerental">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppNoAcitionBar">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.wudebin.bicyclerental.action.main" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".login.GuideActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".login.LoginActivity">
            <intent-filter>
                <action android:name="com.wudebin.bicyclerental.action.login" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".login.RegisterActivity">
            <intent-filter>
                <action android:name="com.wudebin.bicyclerental.action.register" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".login.SetPasswordActivity">
            <intent-filter>
                <action android:name="com.wudebin.bicyclerental.action.setpassword" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".login.ForgetPasswordActivity">
            <intent-filter>
                <action android:name="com.wudebin.bicyclerental.action.forgetpassword" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".login.ForgetAuthActivity">
            <intent-filter>
                <action android:name="com.wudebin.bicyclerental.action.forgetauth" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".login.ForgetReviewActivity">
            <intent-filter>
                <action android:name="com.wudebin.bicyclerental.action.forgetreview" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".personalsetting.UserPhotoActivity">
            <intent-filter>
                <action android:name="com.wudebin.bicyclerental.action.userphoto" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".systemsetting.ChangePassWordActivity">
            <intent-filter>
                <action android:name="com.wudebin.bicyclerental.action.changepwd" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".systemsetting.ContactUsActivity">
            <intent-filter>
                <action android:name="com.wudebin.bicyclerental.action.contactus" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".systemsetting.FeedbackActivity">
            <intent-filter>
                <action android:name="com.wudebin.bicyclerental.action.feedback" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
