<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/work_backgroud"
    android:orientation="vertical">
    <include layout="@layout/toolbar"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/change_pwd_used"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="@string/write_used_pwd"
            android:singleLine="true"
            app:met_floatingLabel="highlight" />

        <CheckBox
            android:id="@+id/pwd_visible_top"
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:layout_gravity="right|top"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/pwd_visible_selector"
            android:button="@null"
            android:checked="true" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/change_pwd_new"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="@string/write_new_pwd"
            android:singleLine="true"
            app:met_floatingLabel="highlight" />

        <CheckBox
            android:id="@+id/pwd_visible_bottom"
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:layout_gravity="right|top"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/pwd_visible_selector"
            android:button="@null"
            android:checked="true" />
    </FrameLayout>
</LinearLayout>
