<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/work_backgroud"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/work_cardview_radius"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:orientation="vertical">
            <RelativeLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="55dp">
                <ImageView
                    android:id="@+id/perseting_item_top_icon"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/icon_phone"/>
                <TextView
                    android:id="@+id/perseting_item_top_text"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_toRightOf="@id/perseting_item_top_icon"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/hintcolor"
                    android:textSize="15dp"
                    android:text="15030559181"/>
                <ImageView
                    android:id="@+id/perseting_item_top_edit"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/icon_edit"/>

            </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="55dp">
            <ImageView
                android:id="@+id/perseting_item_bot_icon"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_mail"/>
            <TextView
                android:id="@+id/perseting_item_bot_text"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_toRightOf="@id/perseting_item_bot_icon"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textColor="@color/hintcolor"
                android:textSize="15dp"
                android:text="绑定邮箱后更安全"/>
            <ImageView
                android:id="@+id/perseting_item_bot_edit"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_edit"/>

            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>