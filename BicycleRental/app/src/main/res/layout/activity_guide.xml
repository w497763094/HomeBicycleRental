<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wudebin.bicyclerental.login.GuideActivity">

    <com.wudebin.bicyclerental.login.ColorAnimationView
        android:id="@+id/ColorAnimationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/guide_login"
            android:layout_width="153dp"
            android:layout_height="44dp"
            android:text="@string/login"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/guide_login_selector"
            />
        <Button
            android:id="@+id/guide_register"
            android:layout_width="153dp"
            android:layout_height="44dp"
            android:layout_marginLeft="15dp"
            android:text="@string/register"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/guide_register_selector"/>
        </LinearLayout>

</FrameLayout>
